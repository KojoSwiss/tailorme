<div class="container">
  <div class="row">
    <div class="col-md-7">
      <div class="show_page">
      </div>
      <div class="image_box">
          <% @tailor.photos.each do |photo| %>
          <ul>
            <li>
              <%= cl_image_tag photo.key %>
            </li>
          </ul>
          <% end %>
      </div>
      <div class="tailor-desc">
        <h3>Description</h3>
        <p><%= @tailor.description %></p>
